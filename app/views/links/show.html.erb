<div style="width:100%; height: 300px; overflow-y:hidden">
  <%= image_tag(@link.banner, style:'width:100%') %>
</div>
<div class="container" style="margin-top: 2em">
  <div class="row">
    <div class="jumbotron" style="width:100%">
      <h1 class="display-4">
        <%= link_to @link.title, root_path %>
      </h1>

      <p class="lead">
      <%-#found @ https://devhints.io/strftime-%>
        <%= @link.updated_at.strftime("%A, %B %e, %Y") %> by <%= @link.user.username %> | <%= pluralize(@link.views, "View") %>
      </p>
      <hr class="my-4" />
      <div class="post_body">
        <%= @link.body %>
      </div>
    </div>
  </div>
</div>

<div class="container">
<h2> <%= @link.comments.count %> Comments</h2>
<br>
<%= render @link.comments%>
<h3>Add a comment</h3>
<%= render "comments/form" %>
<br>
</div>
